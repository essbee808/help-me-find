<% if @program.errors.any? %>
    <% @program.errors.full_messages. each do |message| %>
        <h3><%= message %></h3>
    <% end %>
<% end %>

<%= form_with model: @program do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <br>
    <%= collection_select(:organization, :id, Organization.all, :id, :name, :include_blank => "Select an organization") %><br>
   
    <%= f.label :description%>
    <%= f.text_area :description %><br>
    <br>
    <%= f.label :eligibility %>
    <%= f.text_area :eligibility %><br>
    <br>
    <%= f.label :cost %>
    <%= f.text_field :cost %><br>
    <br> 
    <%= f.label :languages %>
    <%= f.text_field :languages %><br>
    <br>
    <%= f.label :coverage_area %>
    <%= f.text_area :coverage_area %><br>
    <br>
  
    <%= f.submit %>
<% end %> 

 