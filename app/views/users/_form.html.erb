<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
        <h3><%= message %></h3>
    <% end %>
<% end %>

<%= form_with model: @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %><br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <br>
    <%= f.submit 'Submit' %>
<% end %>